<!doctype html>

<html lang="en">

<head>
    <title>Enter Name Page</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">  
    
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

    <script src="bootstrap-4.0.0/js/tests/vendor/jquery-1.9.1.min.js"></script> 
    <script src="https://npmcdn.com/tether@1.2.4/dist/js/tether.min.js"></script>   
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/css/bootstrap.min.css" integrity="sha384-rwoIResjU2yc3z8GV/NPeZWAv56rSmLldC3R/AZzGRnGxQQKnKkoFVhFQhNUwEyJ" crossorigin="anonymous">
    <link type="text/css" rel="stylesheet" href="css/materialize.css" media="screen">
    
    <!-- Stylesheets that we wrote -->
    <link href="css/main2.css" rel="stylesheet">
    <link href="css/enter-name-page.css" rel="stylesheet"> 
    
</head>

<body>
    <div class="container">
        <div class="top-of-page">
            <div class="row">
                <div class="col-3">
                    <a href="home-page">Back</a>
                </div>
                
                <div class="col-9">
                    <h1>{{name}}</h1>
                </div>
            </div>
        </div>
        
        <div>
            <div class="input-field col s12">
                <input placeholder="Enter in MM/DD/YYYY format" id="DueDate" type="text" class="validate">
                <label for="DueDate">Due Date</label>
            </div>
            <div class="input-field col s12">
                <input placeholder="Enter in hrs:mins format" id="DueTime" type="text" class="validate">
                <label for="DueTime">Due Time</label>
            </div>
        </div>
       
        <!-- Div that contains empty space, to give illusion of two pages -->
        <div class="middle-spacer"></div>

        <!-- Second set of forms to enter -->
        <div>
            <div class="input-field col s12">
                <input placeholder="Enter in MM/DD/YYYY format" id="StartDate" type="text" class="validate">
                <label for="StartDate">Desired Start Date</label>
            </div>

            <div class="input-field col s12">
                <input placeholder="Enter in hrs:mins format" id="StartTime" type="text" class="validate">
                <label for="StartTime">Desired Start Time</label>
            </div>

            <div class="input-field col s6">
                <input placeholder="Enter in hrs:mins format" id="Checkpoint" type="text" class="validate">
                <label for="Checkpoint">Checkpoint Interval</label>
            </div>
            
            <div class="input-field col s12">
                <input id="Estimate" type="text" class="validate">
                <label for="Estimate">Estimated Hours Until Completion</label>
            </div>
        </div>
        
        <div class="bottom-spacer"></div>
        <a onclick="return checkInput();" href="start-countdown" class="spacedLink">Continue</a>
    </div>

    <script src="https://code.jquery.com/jquery.js"></script>        
    <script src="js/bootstrap.min.js"></script>
    <script type="text/javascript" src="js/materialize.js"></script>
    <script src="js/edit-name-page.js"></script>
</body>
